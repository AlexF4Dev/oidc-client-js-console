{
    "name": "oidc-client-console",
    "version": "1.0.8",
    "description": "OpenID Connect (OIDC) & OAuth2 for console",
    "keywords": [
        "auth",
        "authentication",
        "client",
        "connect",
        "console",
        "identity",
        "pkce",
        "oauth2",
        "oidc",
        "openid"
    ],
    "main": "dist/index.js",
    "types": "dist/src/index.js.ts",
    "homepage": "https://github.com/AlexF4Dev/oidc-client-js-console",
    "repository": {
        "type": "git",
        "url": "https://github.com/AlexF4Dev/oidc-client-js-console.git"
    },
    "bugs": {
        "url": "https://github.com/AlexF4Dev/oidc-client-js-console/issues"
    },
    "scripts": {
        "start": "tsc && node  dist/examples/main.js",
        "build": "tsc",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags",
        "lint": "eslint */**/*.ts --quiet --fix"
    },
    "license": "Apache-2.0",
    "author": "Alex Furman <alex.furman@live.com>",
    "dependencies": {
        "dotenv": "^8.2.0",
        "fs-extra": "^9.0.1",
        "keytar": "^6.0.1",
        "node-window-polyfill": "^1.0.0",
        "oidc-client": "^1.10.1",
        "open": "^7.3.0",
        "xmlhttprequest-ssl": "^1.6.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.1",
        "@types/keytar": "^4.4.2",
        "@types/node": "^14.0.27",
        "@types/open": "^6.2.1",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "typescript": "^4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "files": [
        "dist/**/*"
    ]
}
