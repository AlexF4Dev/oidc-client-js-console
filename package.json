{
    "name": "oidc-client-console",
    "version": "1.0.12",
    "description": "OpenID Connect (OIDC) & OAuth2 for console",
    "keywords": [
        "auth",
        "authentication",
        "client",
        "connect",
        "console",
        "identity",
        "pkce",
        "oauth2",
        "oidc",
        "openid"
    ],
    "main": "dist/index.js",
    "types": "dist/src/index.js.ts",
    "homepage": "https://github.com/AlexF4Dev/oidc-client-js-console",
    "repository": {
        "type": "git",
        "url": "https://github.com/AlexF4Dev/oidc-client-js-console.git"
    },
    "bugs": {
        "url": "https://github.com/AlexF4Dev/oidc-client-js-console/issues"
    },
    "scripts": {
        "start": "tsc && node  dist/examples/main.js",
        "build": "tsc",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags",
        "lint": "eslint */**/*.ts --quiet --fix"
    },
    "license": "Apache-2.0",
    "author": "Alex Furman <alex.furman@live.com>",
    "dependencies": {
        "dotenv": "^16.4.7",
        "fs-extra": "^11.2.0",
        "keytar": "^7.9.0",
        "node-fetch": "^3.3.2",
        "node-window-polyfill": "^1.0.4",
        "oidc-client-ts": "^3.1.0",
        "open": "^8.4.2",
        "uuid": "^11.0.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/fs-extra": "^11.0.4",
        "@types/keytar": "^4.4.2",
        "@types/node": "^22.10.5",
        "@types/node-fetch": "^2.6.12",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.19.1",
        "@typescript-eslint/parser": "^8.19.1",
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "prettier": "^3.4.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "files": [
        "dist/**/*"
    ]
}
